<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000">

        <OnSwipe
            motion:dragDirection="dragUp"
            motion:touchAnchorId="@id/btn5"
            motion:touchAnchorSide="top" />

        <KeyFrameSet>

            <KeyAttribute
                android:alpha="0"
                android:scaleX="1"
                android:scaleY="1"
                motion:framePosition="100"
                motion:motionTarget="@+id/btn7" />

            <KeyAttribute
                android:alpha="0"
                android:scaleX="1"
                android:scaleY="1"
                motion:framePosition="100"
                motion:motionTarget="@+id/btn8" />

            <KeyAttribute
                android:alpha="0"
                android:scaleX="1"
                android:scaleY="1"
                motion:framePosition="100"
                motion:motionTarget="@+id/btn9" />

        </KeyFrameSet>

    </Transition>

    <ConstraintSet android:id="@+id/start">

        <Constraint
            android:id="@+id/btn1"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:layout_marginTop="@dimen/margin_vertical_size"
            motion:layout_constraintEnd_toStartOf="@id/btn2"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@+id/btn2"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:layout_marginTop="@dimen/margin_vertical_size"
            motion:layout_constraintEnd_toStartOf="@id/btn3"
            motion:layout_constraintStart_toEndOf="@id/btn1"
            motion:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@+id/btn3"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:layout_marginTop="@dimen/margin_vertical_size"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toEndOf="@id/btn2"
            motion:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@+id/btn4"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:layout_marginTop="@dimen/margin_vertical_size"
            motion:layout_constraintEnd_toStartOf="@id/btn5"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@id/btn1" />

        <Constraint
            android:id="@+id/btn5"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:layout_marginTop="@dimen/margin_vertical_size"
            motion:layout_constraintEnd_toStartOf="@id/btn6"
            motion:layout_constraintStart_toEndOf="@id/btn4"
            motion:layout_constraintTop_toBottomOf="@id/btn1" />

        <Constraint
            android:id="@+id/btn6"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:layout_marginTop="@dimen/margin_vertical_size"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toEndOf="@id/btn5"
            motion:layout_constraintTop_toBottomOf="@id/btn1" />

        <Constraint
            android:id="@+id/btn7"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:layout_marginTop="@dimen/margin_vertical_size"
            motion:layout_constraintEnd_toStartOf="@id/btn8"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@id/btn4" />

        <Constraint
            android:id="@+id/btn8"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:layout_marginTop="@dimen/margin_vertical_size"
            motion:layout_constraintEnd_toStartOf="@id/btn9"
            motion:layout_constraintStart_toEndOf="@id/btn7"
            motion:layout_constraintTop_toBottomOf="@id/btn4" />

        <Constraint
            android:id="@+id/btn9"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:layout_marginTop="@dimen/margin_vertical_size"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toEndOf="@id/btn8"
            motion:layout_constraintTop_toBottomOf="@id/btn4" />

    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">

        <Constraint
            android:id="@+id/btn1"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:layout_marginTop="@dimen/margin_vertical_size"
            motion:layout_constraintEnd_toStartOf="@id/btn2"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@+id/btn2"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:layout_marginTop="@dimen/margin_vertical_size"
            motion:layout_constraintEnd_toStartOf="@id/btn3"
            motion:layout_constraintStart_toEndOf="@id/btn1"
            motion:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@+id/btn3"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:layout_marginTop="@dimen/margin_vertical_size"
            motion:layout_constraintEnd_toStartOf="@id/btn4"
            motion:layout_constraintStart_toEndOf="@id/btn2"
            motion:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@+id/btn4"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:layout_marginTop="@dimen/margin_vertical_size"
            motion:layout_constraintEnd_toStartOf="@id/btn5"
            motion:layout_constraintStart_toEndOf="@id/btn3"
            motion:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@+id/btn5"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:layout_marginTop="@dimen/margin_vertical_size"
            motion:layout_constraintEnd_toStartOf="@id/btn6"
            motion:layout_constraintStart_toEndOf="@id/btn4"
            motion:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@+id/btn6"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:layout_marginTop="@dimen/margin_vertical_size"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toEndOf="@id/btn5"
            motion:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@+id/btn7"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:layout_marginTop="@dimen/margin_vertical_size"
            motion:layout_constraintEnd_toStartOf="@id/btn8"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@id/btn2" />

        <Constraint
            android:id="@+id/btn8"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:layout_marginTop="@dimen/margin_vertical_size"
            motion:layout_constraintEnd_toStartOf="@id/btn9"
            motion:layout_constraintStart_toEndOf="@id/btn7"
            motion:layout_constraintTop_toBottomOf="@id/btn2" />

        <Constraint
            android:id="@+id/btn9"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:layout_marginTop="@dimen/margin_vertical_size"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toEndOf="@id/btn8"
            motion:layout_constraintTop_toBottomOf="@id/btn2" />

    </ConstraintSet>
</MotionScene>
